<div class="user-group-fields">
  <div class="field">
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.text_field :nickname %>
  </div>
  <div class="field">
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.text_field :document_number %>
  </div>
  <div class="field">
    <%= f.text_field :phone %>
  </div>
  <div class="field">
  <%= f.select :scope_id, Decidim::Scope.where(decidim_organization_id: current_organization.id).collect { |s| [ translated_attribute(s.name), s.id ]}, { include_blank: true } %>
  </div>
  <div class="field">
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.upload :avatar %>
  </div>
  <div class="field">
    <%= f.text_area :about, rows: 5 %>
  </div>
</div>
