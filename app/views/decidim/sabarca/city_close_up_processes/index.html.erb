<% add_decidim_meta_tags({
  title: t(".title"),
  description: t(".description"),
  url: decidim_sabarca.city_close_up_processes_url
}) %>

<main class="wrapper">
  <% if organization_scopes.any? %>
    <section id ="organization-scopes" class="row section">
      <%= map_for_scopes %>

      <%= stylesheet_link_tag "decidim/map" %>
      <%= javascript_include_tag "decidim/sabarca/scopes/all-scopes-geojson" %>
      <%= javascript_include_tag "decidim/sabarca/scope_map" %>
    </section>
  <% end %>

  <% if collection.any? %>
    <section id="processes-grid" class="section row collapse">
      <div class="processes-grid-order-by">
        <%= render partial: "decidim/participatory_processes/participatory_processes/order_by_processes" %>
      </div>
      <p class="loading"><%= t('loading', scope: "layouts.decidim.participatory_processes.order_by_processes") %></p>
      <div class="row small-up-1 medium-up-2 large-up-3 card-grid">
        <%= render partial: "decidim/sabarca/shared/participatory_process", collection: collection %>
      </div>
    </section>
  <% end %>

</main>

<%= render 'decidim/sabarca/shared/all_scopes', link: "processes" %>

<%= javascript_include_tag "decidim/participatory_processes/filters" %>
